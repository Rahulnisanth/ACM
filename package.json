{
  "name": "auto-commit-mate",
  "displayName": "Auto Commit Mate - ACM",
  "description": "A VS Code extension designed to help developers track their workflow and automatically generate detailed commit logs for each work session. This extension helps organize project history, track file changes, and push logs to GitHub without manual intervention which upstreams the github contributions",
  "version": "0.0.1",
  "icon": "assets/extension-icon.png",
  "publisher": "Team Insiders",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "main": "./src/extension.js",
  "type": "commonjs",
  "contributes": {
    "commands": [
      {
        "command": "extension.startAutoCommitter",
        "title": "Start the Auto-Commit extension"
      },
      {
        "command": "extension.setTimeDuration",
        "title": "Set time duration for auto-committing logs"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "open": "^10.1.0",
    "vscode": "^1.1.37"
  }
}
